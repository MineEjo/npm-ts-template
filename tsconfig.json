{
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2021"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2021",
		"sourceMap": true
	}
}
